{
  "manifest_version": 2,

  "name": "hulucaster",
  "version": "0.1",
  "description": "Make it easy to stream hulu to chromecast",

  "background": {
    "page": "extension.html",
    "persistent": true
  },

  "browser_action": {
    "default_icon": "icon.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.hulu.com/*", "*://hulu.com/*"],
      "js": ["node_modules/jquery/dist/jquery.min.js","hulucastable_extension.js"]
    }
  ],

  "web_accessible_resources": [
    "node_modules/jquery/dist/jquery.min.map"
  ],

  "permissions": ["<all_urls>"],

  "homepage_url": "http://thpcod.es/hulucaster",
  "author": "Todd H. Page"
}
